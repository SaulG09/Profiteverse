<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="28dp"
    app:strokeWidth="0dp"
    app:cardBackgroundColor="@color/white"
    app:cardElevation="10dp"
    android:layout_margin="10dp"
    android:layout_height="wrap_content">

 <LinearLayout
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:orientation="horizontal"
     >
     <LinearLayout
         android:layout_width="120dp"
         android:background="@drawable/boton_degradado3"
         android:layout_gravity="center"

         android:layout_height="match_parent"
         android:orientation="horizontal">
         <com.google.android.material.card.MaterialCardView
             android:layout_width="100dp"
             android:layout_height="100dp"
             android:layout_margin="10dp"
             app:cardCornerRadius="100dp"
             app:strokeWidth="0dp">
             <LinearLayout
                 android:orientation="vertical"
                 android:id="@+id/fotoCoachGym"
                 android:layout_width="match_parent"
                 android:background="@drawable/boton_degradado3"
                 android:layout_height="match_parent">

             </LinearLayout>
         </com.google.android.material.card.MaterialCardView>

     </LinearLayout>


     <LinearLayout

         android:layout_width="170dp"
         android:layout_height="wrap_content"
         android:orientation="vertical">
         <TextView
             android:id="@+id/nombreCoachGym"
             android:layout_width="match_parent"
             android:gravity="center"
             android:text="Nombre"
             android:singleLine="false"
             android:ellipsize="none"
             android:textSize="20dp"
             android:textStyle="bold"
             android:layout_margin="10dp"
             android:textColor="#353535"
             android:layout_height="wrap_content">

         </TextView>
         <TextView
             android:layout_width="match_parent"
             android:gravity="start"
             android:text="Nombre"
             android:id="@+id/espCoachGym"
             android:textColor="#7C00F4"
             android:singleLine="false"
             android:ellipsize="none"
             android:textStyle="bold"
             android:textSize="18dp"
             android:layout_marginHorizontal="10dp"
             android:layout_height="wrap_content">

         </TextView>
         <TextView
             android:layout_width="match_parent"
             android:gravity="start"
             android:id="@+id/telCoachGym"
             android:text="Nombre"
             android:textColor="#353535"
             android:singleLine="false"
             android:ellipsize="none"
             android:textSize="14dp"
             android:layout_marginHorizontal="10dp"
             android:layout_height="wrap_content">

         </TextView>
         <TextView
             android:layout_width="match_parent"
             android:gravity="center"
             android:text="Nombre"
             android:id="@+id/horarioCoachGym"
             android:textStyle="bold"
             android:textColor="#353535"
             android:singleLine="false"
             android:ellipsize="none"
             android:textSize="14dp"
             android:layout_marginHorizontal="10dp"
             android:layout_marginBottom="10dp"
             android:layout_height="wrap_content">

         </TextView>
     </LinearLayout>

     <LinearLayout
         android:gravity="center|left"
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:orientation="vertical">
         <com.google.android.material.card.MaterialCardView
             android:layout_width="40dp"
             android:id="@+id/editarCoachGym"
             app:cardBackgroundColor="@color/white"
             app:cardElevation="2dp"
             android:layout_marginBottom="15dp"
             app:strokeWidth="0dp"
             app:cardCornerRadius="100dp"
             android:layout_height="40dp">
             <LinearLayout
                 android:layout_margin="10dp"
                 android:background="@drawable/editar"
                 android:layout_width="match_parent"
                 android:layout_height="match_parent">

             </LinearLayout>

         </com.google.android.material.card.MaterialCardView>
         <com.google.android.material.card.MaterialCardView
             android:layout_width="40dp"
             android:id="@+id/borrarCoachGym"
             app:cardBackgroundColor="@color/white"
             app:cardElevation="2dp"
             app:strokeWidth="0dp"
             app:cardCornerRadius="100dp"
             android:layout_height="40dp">
             <LinearLayout
                 android:layout_margin="10dp"
                 android:background="@drawable/eliminar"
                 android:layout_width="match_parent"
                 android:layout_height="match_parent">

             </LinearLayout>

         </com.google.android.material.card.MaterialCardView>
     </LinearLayout>
 </LinearLayout>


</com.google.android.material.card.MaterialCardView>