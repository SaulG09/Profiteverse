<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/registro"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/degradado"
    tools:context=".MainActivity"
    android:clipChildren="false"
    android:clipToPadding="false">

    <TextView
        app:layout_constraintVertical_chainStyle="packed"
        android:layout_marginBottom="40dp"
        android:text="Nueva cuenta"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:textSize="40dp"
        android:id="@+id/bienvenidaR"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        app:layout_constraintTop_toTopOf="@id/registro"
        app:layout_constraintBottom_toTopOf="@id/cardViewR"
        app:layout_constraintLeft_toLeftOf="@id/registro"
        app:layout_constraintRight_toRightOf="@id/registro">

    </TextView>


    <com.google.android.material.card.MaterialCardView
        app:layout_constraintVertical_chainStyle="packed"
        android:id="@+id/cardViewR"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="48dp"
        app:layout_constraintTop_toBottomOf="@+id/bienvenidaR"
        app:layout_constraintBottom_toBottomOf="@id/registro"
        app:cardElevation="28dp"
        app:strokeColor="@color/white"
        app:cardBackgroundColor="@color/white"
        app:layout_constraintLeft_toLeftOf="@id/registro"
        app:layout_constraintRight_toRightOf="@id/registro">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="15dp"
            android:layout_marginVertical="30dp">

            <TextView
                android:text="Registro"
                android:textStyle="bold"
                android:textColor="#424242"
                android:gravity="center"
                android:textSize="35dp"
                android:id="@+id/registroText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                app:layout_constraintTop_toTopOf="@id/registro"
                app:layout_constraintBottom_toTopOf="@id/cardViewR"
                app:layout_constraintLeft_toLeftOf="@id/registro"
                app:layout_constraintRight_toRightOf="@id/registro"
                android:layout_marginBottom="35dp">

            </TextView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/white"
                app:cardCornerRadius="20dp"
                app:strokeWidth="3dp"
                app:strokeColor="#B994FF"
                android:layout_marginBottom="20dp">
                <EditText
                    android:layout_margin="15dp"
                    android:textColor="#424242"
                    android:textColorHint="#666666"
                    android:id="@+id/textoCorreo"
                    android:layout_width="match_parent"
                    android:inputType="text"
                    android:hint="Email"
                    android:textSize="16dp"
                    android:background="@null"
                    android:layout_height="match_parent">

                </EditText>
            </com.google.android.material.card.MaterialCardView>


            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/white"
                app:cardCornerRadius="20dp"
                app:strokeWidth="3dp"
                app:strokeColor="#9B6FEF"
                android:layout_marginBottom="20dp">
                <EditText
                    android:layout_margin="15dp"
                    android:textColor="#424242"
                    android:textColorHint="#666666"
android:id="@+id/textoContra"
                    android:layout_width="match_parent"
                    android:inputType="textPassword"
                    android:hint="Contraseña"
                    android:textSize="16dp"
                    android:background="@null"
                    android:layout_height="match_parent">

                </EditText>
            </com.google.android.material.card.MaterialCardView>


            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/white"
                app:cardCornerRadius="20dp"
                app:strokeWidth="3dp"
                app:strokeColor="#4B13B2"
                android:layout_marginBottom="20dp">
                <EditText
                    android:textColor="#424242"
    android:textColorHint="#666666"
                    android:id="@+id/textoConfirmarCon"
                    android:layout_margin="15dp"
                    android:layout_width="match_parent"
                    android:inputType="textPassword"
                    android:hint="Confirmar contraseña"
                    android:textSize="16dp"
                    android:background="@null"
                    android:layout_height="match_parent">

                </EditText>
            </com.google.android.material.card.MaterialCardView>


            <com.google.android.material.button.MaterialButton
                android:layout_width="match_parent"
                app:cornerRadius="25dp"
                app:backgroundTint="#DEC1FF"
                android:id="@+id/registrarCuenta"
                android:elevation="6dp"
                android:text="Registrarse"
                android:textColor="#424242"
                android:textSize="24dp"
                android:layout_marginHorizontal="5dp"
                android:layout_height="70dp"
                android:stateListAnimator="@null"
                android:layout_marginBottom="15dp">


            </com.google.android.material.button.MaterialButton>
            <com.google.android.material.button.MaterialButton
                android:layout_width="match_parent"
                android:id="@+id/botonRegistroCoach"
                app:cornerRadius="25dp"
                app:backgroundTint="#FFFFFF"
                android:elevation="6dp"
                app:icon="@drawable/google"
                app:iconGravity="textStart"
                app:iconPadding="8dp"
                app:iconTint="@null"
                app:iconSize="40dp"
                android:layout_marginHorizontal="5dp"
                android:layout_height="70dp"
                android:stateListAnimator="@null"
                android:layout_marginBottom="15dp">


            </com.google.android.material.button.MaterialButton>



        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>



</androidx.constraintlayout.widget.ConstraintLayout>