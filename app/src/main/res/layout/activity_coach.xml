<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coach"
    android:background="@drawable/degradado"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Coach">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="340dp"

            android:orientation="vertical"
           >

            <com.google.android.material.card.MaterialCardView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:backgroundTint="@color/white"
                android:layout_marginTop="60dp"
                app:strokeWidth="0dp"

                app:cardCornerRadius="100dp">
                <LinearLayout
                    android:orientation="vertical"
                    android:id="@+id/fotoCoach2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/coach">

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <LinearLayout
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="50dp"
                    app:cardCornerRadius="100dp"
                    app:strokeWidth="0dp"
                    android:id="@+id/botonInformacionCoach"
                    android:layout_marginHorizontal="20dp"
                    android:backgroundTint="#FFFFFF"
                    app:cardElevation="10dp"
                    android:layout_height="50dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        >
                        <ImageView
                            android:layout_margin="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/buscar">

                        </ImageView>
                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="50dp"
                    android:id="@+id/editarInfo"
                    android:layout_marginHorizontal="20dp"
                    app:cardCornerRadius="100dp"
                    android:backgroundTint="#FFFFFF"
                    app:cardElevation="10dp"
                    app:strokeWidth="0dp"

                    android:layout_height="50dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        >
                        <ImageView
                            android:layout_margin="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/editar">

                        </ImageView>
                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/botonCerrarSesion"
                    android:layout_width="50dp"
                    android:layout_marginHorizontal="20dp"
                    app:cardCornerRadius="100dp"
                    android:backgroundTint="#FFFFFF"
                    app:cardElevation="10dp"
                    app:strokeWidth="0dp"

                    android:layout_height="50dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                       >
                        <ImageView
                            android:layout_margin="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/salir">

                        </ImageView>
                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>

        </LinearLayout>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:background="@drawable/gym2"
            app:strokeWidth="0dp"
            app:cardElevation="10dp"
            app:cardCornerRadius="42dp">
        <LinearLayout
            android:background="@drawable/degradado"
            android:backgroundTint="@color/white"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <TextView
                app:layout_constraintVertical_chainStyle="packed"
                android:text=""
                android:textStyle="bold"
                android:textColor="#3D3D3D"
                android:textSize="26dp"
                android:id="@+id/nombreCoach"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:layout_marginVertical="30dp">

            </TextView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:id="@+id/botonGymsCoach"
                android:layout_height="90dp"
                app:cardCornerRadius="28dp"
                app:cardElevation="10dp"
                app:strokeWidth="0dp"
                app:cardBackgroundColor="@color/white"
                android:layout_marginHorizontal="15dp"
                android:layout_marginBottom="10dp">

                <LinearLayout
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/gym2"
                        app:tint="#E91E63">

                    </ImageView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Gimnasios"
                        android:textColor="#424242"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textSize="24dp"
                        android:layout_height="match_parent">

                    </TextView>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/botonRutinasCoach"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                app:cardCornerRadius="28dp"
                app:cardElevation="10dp"
                app:strokeWidth="0dp"
                app:cardBackgroundColor="@color/white"
                android:layout_margin="10dp">

                <LinearLayout
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/notas"
                        app:tint="#FF9800">

                    </ImageView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Rutinas"
                        android:textColor="#424242"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textSize="24dp"
                        android:layout_height="match_parent">

                    </TextView>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>



        </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>
</ScrollView>