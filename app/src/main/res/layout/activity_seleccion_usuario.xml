<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/seleccion"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/degradado"
    tools:context=".MainActivity"
    android:clipChildren="false"
    android:clipToPadding="false">

    <TextView
        app:layout_constraintVertical_chainStyle="packed"
        android:layout_marginBottom="40dp"
        android:text="Selección de usuario"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:textSize="40dp"
        android:id="@+id/bienvenidaS"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        app:layout_constraintTop_toTopOf="@id/seleccion"
        app:layout_constraintBottom_toTopOf="@id/cardViewS"
        app:layout_constraintLeft_toLeftOf="@id/seleccion"
        app:layout_constraintRight_toRightOf="@id/seleccion">

    </TextView>


    <com.google.android.material.card.MaterialCardView
        app:layout_constraintVertical_chainStyle="packed"
        android:id="@+id/cardViewS"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="48dp"
        app:layout_constraintTop_toBottomOf="@+id/bienvenidaS"
        app:layout_constraintBottom_toBottomOf="@id/seleccion"
        app:cardElevation="28dp"
        app:strokeColor="@color/white"
        app:cardBackgroundColor="@color/white"
        app:layout_constraintLeft_toLeftOf="@id/seleccion"
        app:layout_constraintRight_toRightOf="@id/seleccion">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="15dp"
            android:layout_marginVertical="30dp">

            <TextView
                android:text="¿Cómo deseas registrarte?"
                android:textStyle="bold"
                android:textColor="#424242"
                android:gravity="center"
                android:textSize="35dp"
                android:id="@+id/registroText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                app:layout_constraintTop_toTopOf="@id/registro"
                app:layout_constraintBottom_toTopOf="@id/cardViewR"
                app:layout_constraintLeft_toLeftOf="@id/registro"
                app:layout_constraintRight_toRightOf="@id/registro"
                android:layout_marginBottom="20dp">

            </TextView>

            <HorizontalScrollView
                android:layout_width="match_parent"

                android:layout_height="wrap_content">
            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="140dp"
                        app:strokeWidth="0dp"
                        android:id="@+id/botonSeleccionUsuario"
                        android:layout_height="140dp"
                        android:layout_marginVertical="20dp"
                        android:layout_marginHorizontal="5dp"
                        app:cardCornerRadius="28dp"
                        app:cardElevation="5dp"
                        app:strokeColor="@null"
                        android:background="@drawable/degradado">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/boton_degradado2">
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/usuarios"
                                android:layout_margin="8dp">

                            </ImageView>

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <TextView
                        android:textColor="#424242"

                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:text="Usuario"
                        android:textSize="18dp">

                    </TextView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="140dp"
                        android:id="@+id/botonSeleccionCoach"
                        app:strokeWidth="0dp"
                        android:layout_height="140dp"
                        android:layout_marginVertical="20dp"
                        android:layout_marginHorizontal="5dp"
                        app:cardCornerRadius="28dp"
                        app:cardElevation="5dp"
                        app:strokeColor="@null"
                        android:background="@drawable/degradado">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/boton_degradado">
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/gym2"
                                android:layout_margin="12dp">

                            </ImageView>

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <TextView
                        android:textColor="#424242"

                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:text="Coach"
                        android:textSize="18dp">

                    </TextView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="140dp"
                        android:id="@+id/botonSeleccionDueño"
                        app:strokeWidth="0dp"
                        android:layout_height="140dp"
                        android:layout_marginVertical="20dp"
                        android:layout_marginHorizontal="5dp"
                        app:cardCornerRadius="28dp"
                        app:cardElevation="5dp"
                        app:strokeColor="@null"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/boton_degradado3">
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/administrar"
                                android:layout_margin="8dp">

                            </ImageView>

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <TextView
                        android:textColor="#424242"

                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:text="Dueño"
                        android:textSize="18dp">

                    </TextView>
                </LinearLayout>

            </LinearLayout>

            </HorizontalScrollView>


        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>



</androidx.constraintlayout.widget.ConstraintLayout>